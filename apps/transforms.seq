      in_col[2] = p1 - p2
      in_col[3] = p0 - p3
      
  def hadamard2x2(inp,out):
    validate_arg(inp)
    validate_arg(out)
    p0 = inp(0) + inp(1)
    p1 = inp(0) - inp(1)
    p2 = inp(2) + inp(3)
    p3 = inp(2) - inp(3)
    out[0] = p0 + p2
    out[1] = p1 + p3
    out[2] = p0 - p2
    out[3] = p1 - p3

  def ihadamard2x2(inp,out):
