  def hadamard4x4[T,N:int](inp: View[T,N], out: View[T,N]):
    if N != 2 and N != 3:
      raise ColaError('Hadamard supports 2D and 3D only')
    # horizontal
    for r in range(4):
      in_row = inp[r,:] if N == 2 else inp[0,r,:]
      out_row = out[r,:] if N == 2 else out[0,r,:]
      p0 = in_row(0)
      p1 = in_row(1)
      p2 = in_row(2)
      p3 = in_row(3)
      t0 = p0 + p3
      t1 = p1 + p2
      t2 = p1 - p2
      t3 = p0 - p3
      out_row[0] = t0 + t1
      out_row[1] = t3 + t2
      out_row[2] = t0 - t1
      out_row[3] = t3 - t2
    # vertical
    for c in range(4):
      in_col = out[:,c] if N == 2 else out[0,:,c]
      p0 = in_col(0)
      p1 = in_col(1)
      p2 = in_col(2)
      p3 = in_col(3)
      t0 = p0 + p3
      t1 = p1 + p2
      t2 = p1 - p2
      t3 = p0 - p3
      in_col[0] = (t0 + t1) >> T(1)
      in_col[1] = (t2 + t3) >> T(1)
      in_col[2] = (t0 - t1) >> T(1)
      in_col[3] = (t3 - t2) >> T(1)

